#include "button.h"



void button_reading ( void ){
	for ( char i = 0; i < N0_OF_BUTTONS ; i ++){
		debounceButtonBuffer3[i] = debounceButtonBuffer2[i];
		debounceButtonBuffer2[i] = debounceButtonBuffer1 [i];
		debounceButtonBuffer1[i] = HAL_GPIO_ReadPin(Button1_GPIO_Port, Button1_Pin);

		// update state of button
		if( debounceButtonBuffer3[i] == debounceButtonBuffer1[i])
			buttonBuffer[i] = debounceButtonBuffer1[i];

		// checking press 1s
		if(buttonBuffer[i] == BUTTON_IS_PRESSED){
			// if a button is pressed , we start counting
			if( counterForButtonPress1s [i] < DURATION_FOR_AUTO_INCREASING ){
				++counterForButtonPress1s[i];
			} else {
			// the flag is turned on when 1 second has passed
			// since the button is pressed .
			flagForButtonPress1s [i] = 1;
			// todo
			}
		} else {
			counterForButtonPress1s [i] = 0;
			flagForButtonPress1s [i] = 0;
		}

		// checking press double
		if(buttonBuffer[i] == BUTTON_IS_PRESSED && fpressBuffer[i] == 0){
			fpressBuffer[i] = 1;
			counterForButtonPressDouble[i] = 0;
		}

		if(fpressBuffer[i] == 1){
			if(counterForButtonPressDouble[i] >= DOUBLE_PRESS_CHECKIN
					&& counterForButtonPressDouble[i] < DOUBLE_PRESS_TIMEOUT){
				if(buttonBuffer[i] == BUTTON_IS_PRESSED){
					flagForButtonPressDouble[i] = 1;
					fpressBuffer[i] = 0;
					counterForButtonPressDouble[i] = 0;
				}
			}

			if(counterForButtonPressDouble[i] >= DOUBLE_PRESS_TIMEOUT){
				fpressBuffer[i] = 0;
				counterForButtonPressDouble[i] = 0;
			}
			++counterForButtonPressDouble[i];
		}

	}
}

unsigned char is_button_pressed ( uint8_t index ){
	if( index >= N0_OF_BUTTONS ) return 0;
	return ( buttonBuffer[index] == BUTTON_IS_PRESSED );
}

unsigned char is_button_pressed_1s ( unsigned char index ){
	if( index >= N0_OF_BUTTONS ) return 0xff;
	if( flagForButtonPress1s[index] == 1){
		flagForButtonPress1s[index] = 0;
		return 1;
	}
	return 0;
}

unsigned char is_button_double_press ( unsigned char index ){
	if( index >= N0_OF_BUTTONS ) return 0xff;
	if( flagForButtonPressDouble[index] == 1){
		flagForButtonPressDouble[index] = 0;
		return 1;
	}
	return 0;
}
